{
	"fileTypes": [
		"cmtc"
	],
	"name": "Cinematic",
	"scopeName": "source.cmtc",
	"patterns": [
		{
			"name": "comment.line.cmtc",
			"begin": "#",
			"end": "$",
			"patterns": [
				{
					"name": "comment",
					"match": "^#.*$"
				}
			]
		},
		{
			"name": "keyword.tag.cmtc",
			"match": "<\\w+>"
		},
		{
			"name": "string.double-quoted.cmtc",
			"begin": "\"",
			"end": "\""
		},
		{
			"name": "constant.numeric.cmtc",
			"match": "\\b\\d+\\.?\\d*\\b"
		},
		{
			"name": "constant.vector.cmtc",
			"match": "\\[\\s*-?\\d+\\.?\\d*\\s*,\\s*-?\\d+\\.?\\d*\\s*,\\s*-?\\d+\\.?\\d*\\s*\\]"
		},
		{
			"name": "constant.boolean.cmtc",
			"match": "\\b(true|false|null)\\b"
		},
		{
			"name": "constant.math-symbol.cmtc",
			"match": "[\\+\\-\\*/]"
		}
	],
	"repository": {
		"tag": {
			"name": "keyword.tag.cmtc",
			"match": "<\\w+>"
		}
	},
	"foldingStartMarker": "\\b(start|if|else|while|for)\\b",
	"foldingStopMarker": "\\b(end|endif|else|endwhile|endfor)\\b"
}